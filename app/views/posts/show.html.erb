<%= render 'partial/navbar' %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">

			<h2>ゴールを設定する</h2>

			<p>
				<input type="button" onclick="location.href='http://localhost:3000/pages/show'"value="アファメーションに進む">
			</p>

			<div>
				<%= link_to 'ゴールを追加する', new_post_path(@user) %>	
			</div>

			<ul>
				<% @posts.each do |post| %>
					<li class="space"><%= post.content %></li>
					<li>
						<% if post.image? %>
							<%= image_tag post.image.url %>
						<% end %>
					</li>
					<%= link_to '[編集]', edit_post_path(post) %>
						<%= link_to '[削除]', post_path(post), method: :delete, data: {confirm: '削除してよろしいですか？'} %>
					<% end %>
			</ul>

			<p>
				<input type="button" onclick="location.href='http://localhost:3000/pages/show'"value="アファメーションに進む">
			</p>
		</div>
	</div>
</div>

