<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<ul>
				<div class="space">
					<% @user.posts.each do |post| %>
						<li class="space"><%= post.content %></li>
						<li>
							<% if post.image? %>
								<%= image_tag post.image.url %>
							<% end %>
						</li>
					<% end %>
				</div>
			</ul>
		</div>
	</div>
</div>